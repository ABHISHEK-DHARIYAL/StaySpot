<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>StaySpot</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />

    <!-- Icons Selcting Style from online -->
    <link rel="shortcut icon" href="/icon/favicon.svg" type="image/x-icon" />

    <!-- Your CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/taxButton.css" />

    <!-- loader css link -->
    <link rel="stylesheet" href="/css/loader.css" />

    <!-- Requring the Rating CSS file -->
    <link rel="stylesheet" href="/css/rating.css" />

    <!-- responsiveForPhone CSS -->
    <link rel="stylesheet" href="/css/responsiveForPhone.css" />

    <link
      rel="stylesheet"
      type="public/css"
      href="/css/starability-slot.min.css"
    />

    <!-- Font Awesome For Fonts -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />

    <!-- Writing Text Link -->
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="d-flex flex-column min-vh-100">
    <div id="loader">
      <div class="dual-ring"></div>
    </div>
    <%- include("../includes/navbar.ejs") %>
    <!-- Flash Message taking File -->
    <%- include("../includes/flash.ejs") %>

    <main class="flex-fill container-fluid mt-4"><%- body -%></main>

    <%- include("../includes/footer.ejs") %>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const loader = document.getElementById("loader");

        // Show loader on any form submission
        const forms = document.querySelectorAll("form");
        forms.forEach((form) => {
          form.addEventListener("submit", () => {
            if (loader) {
              loader.classList.remove("hidden"); // show loader
            }
          });
        });
      });

      // Hide loader on page load or when navigating back (bfcache)
      window.addEventListener("pageshow", (event) => {
        const loader = document.getElementById("loader");
        if (loader) {
          loader.classList.add("hidden"); // fade out
        }
      });
    </script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>

    <!-- Bootstrap JS (with Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

    <script src="/js/script.js"></script>
  </body>
</html>
