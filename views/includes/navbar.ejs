<style>
  @media (max-width: 767.98px) {
    #navbarNavAltMarkup.menu-open {
      background-color: #f8f9fa;
      border-radius: 0 0 10px 10px;
      padding: 10px;
    }

    body.dark-theme #navbarNavAltMarkup.menu-open {
      background-color: #2c2c2c;
    }

    #navbarNavAltMarkup.menu-open .nav-link,
    #navbarNavAltMarkup.menu-open button {
      color: #333;
      display: block;
      margin: 5px 0;
    }

    body.dark-theme #navbarNavAltMarkup.menu-open .nav-link,
    body.dark-theme #navbarNavAltMarkup.menu-open button {
      color: #f1f1f1;
    }

    .navbar-toggler {
      background-color: red !important;
      border-color: red !important;
    }

    .navbar-toggler-icon {
      filter: invert(1);
    }
  }

  @media (min-width: 768px) {
    #navbarNavAltMarkup {
      background-color: transparent !important;
      padding: 0;
    }

    #navbarNavAltMarkup .nav-link,
    #navbarNavAltMarkup button {
      display: inline-block;
      margin: 0 5px;
      color: inherit;
    }

    .navbar-toggler {
      background-color: transparent !important;
      border: none !important;
    }
  }

  .navbar-toggler {
    padding: 0.4rem 0.5rem;
    font-size: 1rem;
    border-radius: 6px;
  }

  @media (max-width: 575.98px) {
    .navbar-toggler {
      padding: 0.3rem 0.4rem;
      font-size: 0.9rem;
      border-radius: 5px;
    }

    .navbar-toggler-icon {
      width: 1.2rem;
      height: 1.2rem;
    }
  }

  @media (max-width: 400px) {
    .navbar-toggler {
      padding: 0.25rem 0.35rem;
      font-size: 0.8rem;
      border-radius: 4px;
    }

    .navbar-toggler-icon {
      width: 1rem;
      height: 1rem;
    }
  }

  @media (max-width: 320px) {
    .navbar-toggler {
      padding: 0.2rem 0.3rem;
      font-size: 0.7rem;
      border-radius: 3px;
    }

    .navbar-toggler-icon {
      width: 0.9rem;
      height: 0.9rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-regular fa-compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="d-flex flex-grow-1 justify-content-center navbar-search">
        <form
          class="form-inline mx-auto"
          role="search"
          action="/listings/search"
          method="get"
        >
          <input
            class="form-control mr-sm-2 search-inp"
            type="search"
            name="q"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
            <i class="fa-solid fa-magnifying-glass search-icon"></i>&nbsp;Search
          </button>
        </form>
      </div>
      <button
        id="themeToggle"
        class="btn btn-outline-secondary ms-2 navbar-dark"
      >
        <i id="themeIcon" class="fa-solid fa-moon"></i>
      </button>
      &nbsp;
      <div class="navbar-nav ms-auto">
        <% if(currUser) { %>
        <a class="nav-link navbar-nav" href="/listings/new">Airbnb your home</a>
        <% } %> <% if(!currUser){ %>
        <a class="nav-link active navbar-nav" aria-current="page" href="/signup"
          >Sign Up</a
        >
        <a class="nav-link navbar-nav" href="/login">Log In</a>
        <% } %> <% if(currUser){ %>
        <a class="nav-link navbar-nav" href="/logout">Log Out</a>
        <form
          action="/listings/delete"
          method="POST"
          onsubmit="return confirm('Are you sure? This cannot be undone.')"
        >
          <button type="submit" class="btn btn-danger">
            Delete My Account
          </button>
        </form>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  const themeToggle = document.getElementById("themeToggle");
  const themeIcon = document.getElementById("themeIcon");

  if (localStorage.getItem("theme") === "dark") {
    document.body.classList.add("dark-theme");
    themeIcon.classList.replace("fa-moon", "fa-sun");
  }

  themeToggle.addEventListener("click", () => {
    document.body.classList.toggle("dark-theme");

    if (document.body.classList.contains("dark-theme")) {
      themeIcon.classList.replace("fa-moon", "fa-sun");
      localStorage.setItem("theme", "dark");
    } else {
      themeIcon.classList.replace("fa-sun", "fa-moon");
      localStorage.setItem("theme", "light");
    }
  });

  const toggler = document.querySelector(".navbar-toggler");
  const nav = document.querySelector("#navbarNavAltMarkup");
  const search = document.querySelector(".navbar-search");
  const themeBtn = document.querySelector(".navbar-dark");
  const exploreLink = document.querySelector(
    "#navbarNavAltMarkup > .navbar-nav > .nav-link"
  );
  const authLinks = document.querySelectorAll(
    "#navbarNavAltMarkup > .navbar-nav.ms-auto > .nav-link"
  );
  const deleteForm = document.querySelector(
    "#navbarNavAltMarkup > .navbar-nav.ms-auto > form"
  );
  const taxBtn = document.querySelector(".navbar-tax");

  let isOpen = false;

  function hideAll() {
    search?.classList.add("d-none");
    themeBtn?.classList.add("d-none");
    exploreLink?.classList.add("d-none");
    authLinks.forEach((el) => el.classList.add("d-none"));
    deleteForm?.classList.add("d-none");
    taxBtn?.classList.add("d-none");
    nav.classList.remove("menu-open");
  }

  function showAll() {
    search?.classList.remove("d-none");
    themeBtn?.classList.remove("d-none");
    exploreLink?.classList.remove("d-none");
    authLinks.forEach((el) => el.classList.remove("d-none"));
    deleteForm?.classList.remove("d-none");
    taxBtn?.classList.remove("d-none");
    nav.classList.add("menu-open");
  }

  function setupNavbar() {
    if (window.innerWidth < 768) {
      hideAll();
    } else {
      showAll();
    }
  }
  setupNavbar();
  window.addEventListener("resize", setupNavbar);

  toggler.addEventListener("click", () => {
    if (window.innerWidth < 768) {
      if (!isOpen) {
        showAll();
        isOpen = true;
      } else {
        hideAll();
        isOpen = false;
      }
    }
  });
</script>
