<script>
  document.addEventListener("DOMContentLoaded", () => {
    const budgetToggleBtn = document.getElementById("budgetToggleBtn");
    const budgetFilterContainer = document.getElementById(
      "budgetFilterContainer"
    );
    budgetToggleBtn.addEventListener("click", (event) => {
      event.stopPropagation();
      const isActive = budgetFilterContainer.classList.toggle("active");
      budgetToggleBtn.textContent = isActive
        ? "Filter by Budget ▲"
        : "Filter by Budget ▼";
    });
    document.addEventListener("click", (event) => {
      if (
        !budgetToggleBtn.contains(event.target) &&
        !budgetFilterContainer.contains(event.target) &&
        budgetFilterContainer.classList.contains("active")
      ) {
        budgetFilterContainer.classList.remove("active");
        budgetToggleBtn.textContent = "Filter by Budget ▼";
      }
    });
    document.querySelectorAll('input[name="budget"]').forEach((checkbox) => {
      checkbox.addEventListener("change", () => {
        const selectedBudgets = Array.from(
          document.querySelectorAll('input[name="budget"]:checked')
        ).map((cb) => cb.value);
        const url = new URL(window.location.href.split("?")[0]);
        selectedBudgets.forEach((budget) =>
          url.searchParams.append("budget", budget)
        );
        window.location.href = url.toString();
      });
    });
  });
</script>

<script>
  const themeToggle = document.getElementById("themeToggle");
  const themeIcon = document.getElementById("themeIcon");
  if (localStorage.getItem("theme") === "dark") {
    document.body.classList.add("dark-theme");
    themeIcon.classList.replace("fa-moon", "fa-sun");
  }
  themeToggle.addEventListener("click", () => {
    document.body.classList.toggle("dark-theme");
    if (document.body.classList.contains("dark-theme")) {
      themeIcon.classList.replace("fa-moon", "fa-sun");
      localStorage.setItem("theme", "dark");
    } else {
      themeIcon.classList.replace("fa-sun", "fa-moon");
      localStorage.setItem("theme", "light");
    }
    const navbarCollapse = document.getElementById("navbarNavAltMarkup");
    const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
    if (bsCollapse && window.innerWidth < 768) {
      bsCollapse.hide();
    }
  });
  document.addEventListener("click", (event) => {
    const navbarCollapse = document.getElementById("navbarNavAltMarkup");
    const toggler = document.querySelector(".navbar-toggler");
    const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
    if (
      bsCollapse &&
      navbarCollapse.classList.contains("show") &&
      !navbarCollapse.contains(event.target) &&
      !toggler.contains(event.target)
    ) {
      bsCollapse.hide();
    }
  });
  const toggler = document.querySelector(".navbar-toggler");
  const nav = document.querySelector("#navbarNavAltMarkup");
  const themeBtn = document.querySelector(".navbar-dark");
  const problemInLink = document.querySelector(".problemToLink");
  const exploreLink = document.querySelector(
    "#navbarNavAltMarkup > .navbar-nav > .nav-link"
  );
  const authLinks = document.querySelectorAll(
    "#navbarNavAltMarkup > .navbar-nav.ms-auto > .nav-link"
  );
  const deleteForm = document.querySelector(
    "#navbarNavAltMarkup > .navbar-nav.ms-auto > form"
  );
  const budgetBtn = document.querySelector(".buttonForBudget");
  let isOpen = false;
  function hideAll() {
    budgetBtn?.classList.add("d-none");
    themeBtn?.classList.add("d-none");
    exploreLink?.classList.add("d-none");
    problemInLink?.classList.add("d-none");
    authLinks.forEach((el) => el.classList.add("d-none"));
    deleteForm?.classList.add("d-none");
    nav.classList.remove("menu-open");
  }
  function showAll() {
    budgetBtn?.classList.remove("d-none");
    themeBtn?.classList.remove("d-none");
    exploreLink?.classList.remove("d-none");
    problemInLink?.classList.remove("d-none");
    authLinks.forEach((el) => el.classList.remove("d-none"));
    deleteForm?.classList.remove("d-none");
    nav.classList.add("menu-open");
  }
  function setupNavbar() {
    if (window.innerWidth < 768) {
      hideAll();
      isOpen = false;
    } else {
      showAll();
      isOpen = true;
    }
  }
  setupNavbar();
  window.addEventListener("resize", setupNavbar);
  budgetBtn?.addEventListener("click", () => {
    if (window.innerWidth < 768 && !isOpen) {
      showAll();
      isOpen = true;
    } else if (window.innerWidth < 768 && isOpen) {
      hideAll();
      isOpen = false;
    }
  });
  toggler.addEventListener("click", () => {
    if (window.innerWidth < 768) {
      if (!isOpen) {
        showAll();
        isOpen = true;
      } else {
        hideAll();
        isOpen = false;
      }
    }
  });
</script>

<script>
  const searchToggleBtn = document.getElementById("searchToggleBtn");
  const mobileSearchBar = document.getElementById("mobileSearchBar");
  let searchOpen = false;
  searchToggleBtn.addEventListener("click", (e) => {
    e.stopPropagation();
    searchOpen = !searchOpen;
    if (searchOpen) {
      mobileSearchBar.classList.add("show");
      mobileSearchBar.style.display = "flex";
      mobileSearchBar.querySelector("input").focus();
    } else {
      mobileSearchBar.classList.remove("show");
      mobileSearchBar.style.display = "none";
    }
  });
  document.addEventListener("click", (event) => {
    if (
      searchOpen &&
      !mobileSearchBar.contains(event.target) &&
      !searchToggleBtn.contains(event.target)
    ) {
      mobileSearchBar.classList.remove("show");
      mobileSearchBar.style.display = "none";
      searchOpen = false;
    }
  });
</script>
